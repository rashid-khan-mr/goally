<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        >


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidlineItemRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidlineIvRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78"
        />

<androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidlineIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/copiletLayout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_img_bg"
            >


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/copiletIv"
        android:layout_width="67dp"
        android:layout_height="67dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/clock"
        android:background="@drawable/rounded_dialog_bg"
        app:riv_corner_radius="7dp"
        android:scaleType="fitXY"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/copiletNameLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/copiletLayout"
            app:layout_constraintRight_toLeftOf="@+id/scheduleTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/copiletLayout"
            >

            <TextView
                android:id="@+id/copiletNameTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintWidth_percent="0.85"
                app:layout_constraintHorizontal_bias="0.3"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:text="name"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>





        <TextView
        android:id="@+id/scheduleTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toLeftOf="@+id/guidlineItemRight"
        app:layout_constraintBottom_toBottomOf="@+id/copiletLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.8"
        android:gravity="center_vertical"
            android:textSize="12dp"
            android:text="Weekend"
        />

    <TextView
        android:id="@+id/folderTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/copiletLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="0.8"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:text="Social"
        />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.88"
        android:layout_marginStart="80dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>